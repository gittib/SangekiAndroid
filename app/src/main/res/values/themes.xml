<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SangekiAndroidBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/baseAppTextColor</item>
    </style>
    <style name="Theme.SangekiAndroid" parent="Theme.SangekiAndroidBase" />

    <style name="Theme.SangekiAndroid.DialogBase" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColorPrimary">@color/dialog_text_color</item>
        <item name="android:windowTitleStyle">@style/Theme.SangekiAndroid.DialogBase.Title</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Theme.SangekiAndroid.DialogBase.Button.Neutral</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Theme.SangekiAndroid.DialogBase.Button.Negative</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Theme.SangekiAndroid.DialogBase.Button.Positive</item>
    </style>
    <style name="Theme.SangekiAndroid.DialogBase.Title">
        <item name="android:textColor">@color/dialog_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.SangekiAndroid.DialogBase.Button">
        <item name="android:textColor">@color/dialog_button_text_color</item>
    </style>
    <style name="Theme.SangekiAndroid.DialogBase.Button.Neutral">
    </style>
    <style name="Theme.SangekiAndroid.DialogBase.Button.Negative">
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="Theme.SangekiAndroid.DialogBase.Button.Positive">
    </style>

    <style name="Theme.SangekiAndroid.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>
    <style name="Theme.SangekiAndroid.Display">
        <item name="android:background">@color/white</item>
    </style>
</resources>