<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="48dp">

    <TextView
        android:id="@+id/loop_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:text="1ループ目" />

    <View
        android:id="@+id/line_tl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/loop_title"
        app:layout_constraintBottom_toTopOf="@id/line_bl"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/background_inverse"/>
    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/loop_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/background_inverse"/>
    <View
        android:id="@+id/line_bl"
        app:layout_constraintTop_toBottomOf="@id/line_tl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/loop_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/background_inverse"/>
    <View
        android:id="@+id/line_tr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/loop_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_br"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/background_inverse"/>
    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/loop_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/background_inverse"/>
    <View
        android:id="@+id/line_br"
        app:layout_constraintTop_toBottomOf="@id/line_tr"
        app:layout_constraintLeft_toRightOf="@id/loop_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/background_inverse"/>

</androidx.constraintlayout.widget.ConstraintLayout>