<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:id="@+id/detail_difficulty_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/detail_difficulty_star"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_solid_black_r8"
        android:textColor="@color/text_color_inverse"
        android:textSize="16sp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        tools:text="難しい"/>

    <TextView
        android:id="@+id/detail_difficulty_star"
        app:layout_constraintBaseline_toBaselineOf="@id/detail_difficulty_name"
        app:layout_constraintLeft_toRightOf="@id/detail_difficulty_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_strong"
        android:textSize="16sp"
        android:padding="4dp"
        tools:text="★★★★★☆☆☆"/>
</androidx.constraintlayout.widget.ConstraintLayout>