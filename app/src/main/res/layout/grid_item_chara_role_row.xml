<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/chara_role_width"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/zettaiYuukouMushi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/chara_role_icon_size"
        android:layout_height="wrap_content"
        android:text="◆"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/yuukouMushi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/zettaiYuukouMushi"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/chara_role_icon_size"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fushi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/yuukouMushi"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/chara_role_icon_size"
        android:layout_height="wrap_content"
        android:text="★"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/role_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fushi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="2dp"
        tools:text="キーパーソン"/>
</androidx.constraintlayout.widget.ConstraintLayout>