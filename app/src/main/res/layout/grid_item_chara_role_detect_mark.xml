<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/background_chara_image"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="bottom|left"
        android:layout_margin="2dp"
        android:alpha="0.6"
        android:adjustViewBounds="true"
        tools:src="@drawable/chara_stand_31"/>
    <TextView
        android:id="@+id/role_mark"
        android:layout_width="@dimen/role_list_role_mark_size"
        android:layout_height="@dimen/role_list_role_mark_size"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/bg_stroke_black"
        />
</FrameLayout>