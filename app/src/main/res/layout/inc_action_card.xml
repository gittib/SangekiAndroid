<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_stroke_black"
    android:padding="4dp">

    <ImageView
        android:id="@+id/action_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/kifu_action_card_item_width"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/a_writer_cards_0b"/>

    <ImageView
        android:id="@+id/card_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/action_card"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:scaleType="fitXY"
        app:tint="@color/background_inverse"
        android:src="@drawable/card_arrow"/>

    <ImageView
        android:id="@+id/chara_card"
        app:layout_constraintTop_toBottomOf="@id/card_arrow"
        app:layout_constraintLeft_toRightOf="@id/action_card"
        android:layout_width="@dimen/kifu_action_card_item_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:adjustViewBounds="true"
        android:src="@drawable/character_02_0"/>
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/card_arrow"
        app:layout_constraintLeft_toRightOf="@id/action_card"
        android:layout_width="@dimen/kifu_action_card_item_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:adjustViewBounds="true"
        android:visibility="invisible"
        android:src="@drawable/extra_back"/>
</androidx.constraintlayout.widget.ConstraintLayout>